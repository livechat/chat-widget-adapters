{
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist",
    "target": "ESNext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "importsNotUsedAsValues": "error",
    "paths": {
      "@livechat/widget-core": [
        "../widget-core"
      ]
    }
  }
}
