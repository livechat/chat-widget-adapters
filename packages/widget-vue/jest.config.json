{
  "maxWorkers": "25%",
  "testEnvironment": "jsdom",
  "testMatch": [
    "**/*.spec.[jt]s"
  ],
  "coveragePathIgnorePatterns": [
    "node_modules",
    "__tests__"
  ],
  "setupFilesAfterEnv": [
    "./jest.setup.js"
  ],
  "coverageReporters": [
    "text"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 90,
      "lines": 90,
      "statements": 90
    }
  }
}
