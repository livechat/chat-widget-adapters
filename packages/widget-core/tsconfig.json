{
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist",
    "target": "ESNext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "importsNotUsedAsValues": "error"
  }
}
